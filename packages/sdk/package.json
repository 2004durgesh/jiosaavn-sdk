{
  "name": "jiosaavn-sdk",
  "version": "1.0.0",
  "description": "A universal, isomorphic TypeScript SDK for the JioSaavn API.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "imports": {
    "#common/*": "./src/common/*",
    "#modules/*": "./src/modules/*"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:node": "vitest run",
    "test:bun": "bunx vitest run",
    "test:browser": "vitest run --environment jsdom",
    "test:all-runtimes": "npm run test:node && npm run test:bun && npm run test:browser",
    "prepublishOnly": "npm run build",
    "release": "release-it"
  },
  "keywords": [
    "jiosaavn",
    "api",
    "sdk",
    "music",
    "wrapper",
    "typescript",
    "react-native",
    "isomorphic"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "node-forge": "^1.3.1",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node-forge": "^1.3.11",
    "jsdom": "^26.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
